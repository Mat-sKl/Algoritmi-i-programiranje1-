#include <iostream>

using namespace std;

int main(){
int broj1;
int broj2;
int rezultat;
cout<<"Ovaj program je napravljen za zbrajanje, oduzimanje, mnozenje i dijeljenje dva broja. Sve sto moras je upisati prvi i drugi broj, program ce napraviti sve ostalo."<<endl<<endl;
cout<<"Unesi prvi broj: ";
cin>>broj1;
cout<<"Unesi drugi broj: ";
cin>>broj2;
cout<<endl;
rezultat=broj1+broj2;
cout<<"Zbroj brojeva= "<<rezultat<<endl;
rezultat=broj1-broj2;
cout<<"Razlika brojeva= "<<rezultat<<endl;
rezultat=broj1*broj2;
cout<<"Umnozak brojeva= "<<rezultat<<endl;
rezultat=broj1/broj2;
cout<<"Kolicnik brojeva= "<<rezultat<<endl;
return 0;
}
